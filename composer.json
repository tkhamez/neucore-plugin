{
    "name": "tkhamez/neucore-plugin",
    "description": "Necessary classes to write a Neucore plugin.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "psr/http-message": "^1.0",
        "psr/log": "^1.1 || ^2.0 || ^3.0",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Neucore\\Plugin\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage"
    },
    "config": {
        "platform": {
            "php": "8.0.0"
        },
        "sort-packages": true
    }
}
