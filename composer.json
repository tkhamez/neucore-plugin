{
    "name": "tkhamez/neucore-plugin",
    "description": "Necessary classes to write a Neucore plugin.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Neucore\\Plugin\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "sort-packages": true
    }
}
