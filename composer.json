{
    "name": "tkhamez/neucore-plugin",
    "description": "Necessary classes to write a Neucore plugin.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "psr/http-message": "^2.0",
        "psr/log": "^3.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Neucore\\Plugin\\": "src/",
            "Neucore\\Plugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "sort-packages": true
    }
}
